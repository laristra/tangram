set(TANGRAM_VERSION_MAJOR @TANGRAM_VERSION_MAJOR@ CACHE STRING "Major version of TANGRAM")
set(TANGRAM_VERSION_MINOR @TANGRAM_VERSION_MINOR@ CACHE STRING "Minor version of TANGRAM")
set(TANGRAM_VERSION_MINOR @TANGRAM_VERSION_PATCH@ CACHE STRING "Patch version of TANGRAM")


# Compiler Definitions
set(CMAKE_C_COMPILER @CMAKE_C_COMPILER@ CACHE FILEPATH "C Compiler used for compiling TANGRAM")
set(CMAKE_CXX_COMPILER @CMAKE_CXX_COMPILER@ CACHE FILEPATH "CXX Compiler used for compiling TANGRAM")


# Compiler Flags
set(CMAKE_C_FLAGS "@CMAKE_C_FLAGS@" CACHE STRING "TANGRAM C compiler flags")
set(CMAKE_C_FLAGS_DEBUG "@CMAKE_C_FLAGS_DEBUG@" CACHE STRING "TANGRAM C compiler flags")
set(CMAKE_C_FLAGS_RELEASE "@CMAKE_C_FLAGS_RELEASE@" CACHE STRING "TANGRAM C compiler flags")
set(CMAKE_C_FLAGS_MINSIZEREL "@CMAKE_C_FLAGS_MINSIZEREL@" CACHE STRING "TANGRAM C compiler flags")
set(CMAKE_C_FLAGS_RELWITHDEBINFO "@CMAKE_C_FLAGS_RELWITHDEBINFO@" CACHE STRING "TANGRAM C compiler flags")

set(CMAKE_CXX_FLAGS "@CMAKE_CXX_FLAGS@" CACHE STRING "TANGRAM C compiler flags")
set(CMAKE_CXX_FLAGS_DEBUG "@CMAKE_CXX_FLAGS_DEBUG@" CACHE STRING "TANGRAM C compiler flags")
set(CMAKE_CXX_FLAGS_RELEASE "@CMAKE_CXX_FLAGS_RELEASE@" CACHE STRING "TANGRAM C compiler flags")
set(CMAKE_CXX_FLAGS_MINSIZEREL "@CMAKE_CXX_FLAGS_MINSIZEREL@" CACHE STRING "TANGRAM C compiler flags")
set(CMAKE_CXX_FLAGS_RELWITHDEBINFO "@CMAKE_CXX_FLAGS_RELWITHDEBINFO@" CACHE STRING "TANGRAM C compiler flags")

# TANGRAM Build info
set(TANGRAM_BUILD_TYPE @CMAKE_BUILD_TYPE@ CACHE STRING "TANGRAM build type")

# TANGRAM library 
set(TANGRAM_LIBRARY_NAME @TANGRAM_LIBRARY@ CACHE STRING "Name of the TANGRAM library")

# TANGRAM includes
set(TANGRAM_INCLUDE_DIR @CMAKE_INSTALL_PREFIX@/include CACHE PATH "TANGRAM include file locations")

# TANGRAM options

set(TANGRAM_ENABLE_MPI @TANGRAM_ENABLE_MPI@ CACHE BOOL "Enable MPI Parallelism dfor Tangram")
set(WONTON_ENABLE_MPI @WONTON_ENABLE_MPI@ CACHE BOOL "Enable MPI Parallelism for Wonton")

set(WONTON_DIR @WONTON_DIR@ CACHE PATH "Path to WONTON INSTALLATION")


set(ENABLE_FleCSI @ENABLE_FleCSI@ CACHE BOOL "Use FleCSI")
set(FleCSI_INCLUDE_DIRS @FleCSI_INCLUDE_DIR@ CACHE PATH "FleCSI include dirs")
